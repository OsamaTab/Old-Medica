                var list = new List<string> { "Red", "Cyan", "Light-Blue", "Deep-Purple", "Blue", "Pink", "Purple", "Indigo", "Teal", "Green", "Light-Green", "Yellow", "Amber", "Orange", "Deep-Orange", "Brown", "Grey", "Blue-Grey" };
